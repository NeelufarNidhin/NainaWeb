@model CategoryModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="CategoryName" class="p-0"></label>
            <input asp-for="CategoryName" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SubCategory" class="p-0"></label>
            <input asp-for="SubCategory" disabled class="form-control" />
            

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
            
        </div>
        <div class="row">

            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary border form-control">Back To list</a>
            </div>
        </div>
    </div>
</form>

