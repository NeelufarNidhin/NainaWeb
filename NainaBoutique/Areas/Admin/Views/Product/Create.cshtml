@model ProductModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Create Product</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ProductName" class="p-0"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Sale_Price" class="p-0"></label>
            <input asp-for="Sale_Price" class="form-control" />
            <span asp-validation-for="Sale_Price" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="QuantityInStock" class="p-0"></label>
            <input asp-for="QuantityInStock" class="form-control" />
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Color" class="p-0"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>

        </div>
        <div class="row">

            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-secondary form-control">Create</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary border form-control">Back To list</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
