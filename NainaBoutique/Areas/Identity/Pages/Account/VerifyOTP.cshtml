@page
@model NainaBoutique.Areas.Identity.Pages.Account.VerifyOTPModel
@{
}

<form method="post">
    <div class="form-group row ">

        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Email" class="form-label">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="OTP" class="form-control" aria-required="true" />
            <label asp-for="OTP" class="form-label">OTP</label>
            <span asp-validation-for="OTP" class="text-danger"></span>
        </div>
        <button type="submit" class=" btn  btn-md btn-primary">Log in</button>

    </div>
</form>