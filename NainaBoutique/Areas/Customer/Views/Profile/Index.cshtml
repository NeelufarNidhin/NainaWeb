@model ProfileVM




    <div class="card">
        <div class="card-header bg bg-secondary text-center">
            <h4>User Profile</h4>
        </div>
        <div class="card-body">

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-controller="Profile" asp-action="Index">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ApplicationUser.Id" />
                        <div class="form-group">
                            <label asp-for="ApplicationUser.UserName" class="control-label"></label>
                            <input asp-for="ApplicationUser.UserName" class="form-control" />
                            <span asp-validation-for="ApplicationUser.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApplicationUser.MobileNumber" class="control-label"></label>
                            <input asp-for="ApplicationUser.MobileNumber" class="form-control" />
                            <span asp-validation-for="ApplicationUser.MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApplicationUser.Address" class="control-label"></label>
                            <input asp-for="ApplicationUser.Address" class="form-control" />
                            <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApplicationUser.City" class="control-label"></label>
                            <input asp-for="ApplicationUser.City" class="form-control" />
                            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApplicationUser.State" class="control-label"></label>
                            <input asp-for="ApplicationUser.State" class="form-control" />
                            <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApplicationUser.PostalCode" class="control-label"></label>
                            <input asp-for="ApplicationUser.PostalCode" class="form-control" />
                            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                        </div>




                        <br />
                        <br />


                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" asp-action="UpdateProfile" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
