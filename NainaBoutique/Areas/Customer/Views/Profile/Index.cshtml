@model ProfileVM

<form method="post">
    <input type="hidden" asp-for="@Model.ApplicationUser.Id" />
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <h5>@Model.ApplicationUser.Name</h5>
                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>USER PROFILE</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">@Model.ApplicationUser.UserName</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted"> @Model.ApplicationUser.MobileNumber</p>
                                        </div>
                                    </div>
                                    <h6>Address</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-12 mb-3">
                                            <h6>@Model.ApplicationUser.Address</h6>
                                            <h6>@Model.ApplicationUser.City</h6>
                                            <h6>@Model.ApplicationUser.State</h6>
                                            <h6>@Model.ApplicationUser.PostalCode</h6>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Edit" class="btn btn-primary" asp-action="Edit" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}