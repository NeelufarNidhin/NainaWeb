<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="@Model.ImageUrl" width="250" /> </div>
                            <div class="thumbnail text-center"> <img onclick="change_image(this)" src=".." width="70"> <img onclick="change_image(this)" src=".." width="70"> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i><button class="btn btn-secondary text-uppercase mr-2 px-4">Back</button> </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3">

                                <h5 class="text-uppercase">@Model.ProductName</h5>
                                <div class="price d-flex flex-row align-items-center">
                                    <span class="act-price">Sale Price:@Model.Sale_Price</span>

                                </div>
                                <div class="ml-2"> <small class="dis-price">Price:@Model.Price</small>  </div>

                                <div class="ml-2">
                                    <span class="text-uppercase text-muted brand">Color:@Model.Color</span> </div>
                                </div>
                                <p class="about">@Html.Raw(Model.Description)</p>
                                <div class="sizes mt-5">
                                    <h6 class="text-uppercase">Size</h6> <label class="radio">
                                        <input type="radio" name="size" value="S" checked> <span>0-6 months</span>
                                    </label> <label class="radio">
                                        <input type="radio" name="size" value="M"> <span>6-12 months</span>
                                    </label> <label class="radio">
                                        <input type="radio" name="size" value="L"> <span>1-2 years</span>
                                    </label> <label class="radio"> <input type="radio" name="size" value="XL"> <span>2-3 years</span> </label> <label class="radio">
                                        <input type="radio" name="size" value="XXL"> <span>3-4 years</span>
                                    </label>
                                </div>
                                <div class="cart mt-4 align-items-center"> <button class="btn btn-secondary text-uppercase mr-2 px-4">Add to cart</button> <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i> </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>